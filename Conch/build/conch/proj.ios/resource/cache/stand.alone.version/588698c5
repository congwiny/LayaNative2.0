var entityGUID = 0;
var ZM = {};
var msgDic = {};
ZM.sendMessage = function (msg) {
    var action = msg.action;
    var data = msg.data;
    ZM.invoke(action, data);
}
ZM.onMessage = function (action, func) {
    msgDic[action] = func;
}
ZM.invoke = function (action, data) {
    var func = msgDic[action];
    if (func) {
        func({action: action, data: data});
    }
}